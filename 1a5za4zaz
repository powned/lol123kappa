import random
import os
print("welcome to the the Gusser app 8\nYou have to chosse a number between 1 - 100 until you find the corect Number")

var1 = str(random.randint(0,100))

var2 = 0
running = True
while running: 
 var4 = str(input("PLEASE THE NUMBER HERE:"))
 if str(var4) == str(var1):
  var2 += 1
  print ("you won " + "   Tries = " + str(var2) ) 
  print ( "enter any key to leave the app")
  os.system("pause")
  running = False
 elif str(var4) < str(var1):
  var2 += 1
  print(" Guess higher " + " Tries = " + str(var2) )
 else:
  var2 += 1
  print("Guess lower   " + "   Tries = " + str(var2))
  
quit()
